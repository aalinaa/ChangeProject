<tr>
	<td>
      <%= image_tag(line_item.product.img,class:'list_image') %>
    </td>
    <td class="list_description">
      <dl>
        <dt><%=line_item.product.title%></dt>
        <dd><%= truncate(strip_tags(line_item.product.description),length:80)%></dd>
      </dl> 
    </td>
    <td>
      <%= button_to 'Delete Item', line_item, method: :delete, data: {confirm: 'Are you sure?'},class: "btn btn-info" %>
    </td>
</tr>